<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="190dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_splash_back"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/login_icon"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/on_board_details"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:translationZ="-2dp"
        app:srcCompat="@drawable/splash_corner"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/hello"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="1dp"
        android:text="@string/welcome"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/hello2"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/black"
        android:textAppearance="?attr/textAppearanceHeadline5"
    android:text="@string/hello" />

    <TextView
        android:id="@+id/hello2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_sign_in"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:text="@string/seamless" />

    <ProgressBar
        android:id="@+id/progressBarlogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loaderback"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/bt_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
